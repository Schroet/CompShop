@model CompShop.Domain.Entities.User
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Success</title>
</head>
<body>
    <h1>Success</h1>


    <div>
        @if (TempData["message"] != null)
        {
            <div class="alert alert-success">@TempData["message"]</div>
        }
        @{
            var userName = HttpContext.Current.User.Identity.Name;
            if (userName != "")
            {
                <h3>
                    @Html.ActionLink("Computer Shop", "Index", "Home")
                    <span class="btn-info btn pull-right">
                        @Html.ActionLink(HttpContext.Current.User.Identity.Name + " - Logout", "Logout", "Account")
                    </span>
                </h3>
            }
        }
    </div>
    <div>@Html.ActionLink("Back to List", "Index", "Home")</div>
    <div>@Html.ActionLink("Create account", "Create", "User")</div>
    <div>@Html.ActionLink("Add Product", "Create", "Admin")</div>
</body>
</html>


